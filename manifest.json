{
  "name": "TriShield â€” Auto URL Analyzer",
  "description": "Analyzes URLs before they render. Interstitial warnings, VT + heuristics, badges, dashboard. Dark indigo/green UI.",
  "version": "3.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "TriShield",
    "default_popup": "ui/popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "webNavigation",
    "activeTab",
    "alarms",
    "notifications",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.virustotal.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "options_page": "ui/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui/*.html",
        "ui/*.css",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}